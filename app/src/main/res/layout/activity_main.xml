<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/mainActivityText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/main_activity_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline2"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline1" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="@string/gallery"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline3"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline2" />

    <Button
        android:id="@+id/cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="@string/cart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline4"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline3" />

    <Button
        android:id="@+id/wishlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="@string/wishlist"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline5"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline4" />

    <Button
        android:id="@+id/accountSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="@string/account_settings"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline6"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline5" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityGuideline7"
        app:layout_constraintEnd_toStartOf="@+id/verticalMainActivityGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalMainActivityGuideline1"
        app:layout_constraintTop_toTopOf="@+id/mainActivityGuideline6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainActivityGuideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalMainActivityGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalMainActivityGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>